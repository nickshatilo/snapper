const description = "The screenshot tool macOS deserves. Capture, annotate, and share screenshots instantly. Open source, privacy-first, free forever.";
const url = "https://snapper.tools";
const image = `${url}/icon.png`;
const dmg = "https://github.com/nickshatilo/snapper/releases/download/v1.1/Snapper-1.1.0.dmg";
